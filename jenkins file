    pipeline {

        agent {
            node {
                label 'agent'
            }
        }
    }

    stages {

        stage('Hello') {
            steps {
                echo "Hello"

            }
        }
    }
    post {
        always {
            echo "Post Action"
        }
    }

    pipeline {
        agent any

        options {
            disableConcurrentBuilds
        }

        environment {
            PROJECT_NAME = "ROBOSHOP"
            UBUNTU_SSH_CRED = credentials('UBUNTU-SSH')
        }
    
        stages {

            stage('One') {
                steps {
                    sh "echo ${PROJECT_NAME}"
                    sh "env"
                }
                
            }
        }

        stage('Two') {

            environment {
                PROJECT_NAME = "TODO"
            }
            steps {
                sh "echo ${PROJECT_NAME}"
            }
        }
            }
        
}