    pipeline {

        agent {
            node {
                label 'agent'
            }
        }
    }

    stages {

        stage('Hello') {
            steps {
                echo "Hello"

            }
        }
    }
    post {
        always {
            echo "Post Action"
        }
    }

    pipeline {
        agent any

        options {
            disableConcurrentBuilds
        }

        environment {
            PROJECT_NAME = "ROBOSHOP"
            UBUNTU_SSH_CRED = credentials('UBUNTU-SSH')
        }
    
        stages {

            stage('One') {
                steps {
                    sh "echo ${PROJECT_NAME}"
                    sh "env"
                }
                
            }
        }

        stage('Two') {

            environment {
                PROJECT_NAME = "TODO"
            }
            steps {
                sh "echo ${PROJECT_NAME}"
            }
        }
            }
        
}



pipeline {
    agent any

    stages {
        stage('Parallel Steps') {
            parallel {

                stage('one') {
                    steps {
                        sh 'sleep 100'
                    }
                }
                
                stage('Two') {
                    steps {
                        sh 'sleep 90'
            }        
    }

                stage('Three') {
                    steps {
                        sh 'sleep 120'  
}

                }

            }

        }